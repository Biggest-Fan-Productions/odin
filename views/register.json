{
    "webserver": {
        "views/odin/register": {
            "view": "fost.schema.validate",
            "configuration": {
                "schema": {
                    "type": "object",
                    "properties": {
                        "username": {
                            "type": "string"
                        },
                        "password": {
                            "type": "string",
                            "minLength": 8
                        },
                        "password2": {
                            "type": "string",
                            "minLength": 8
                        },
                        "full_name": {
                            "type": "string"
                        },
                        "email": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "username",
                        "password",
                        "password2",
                        "full_name",
                        "email"
                    ]
                },
                "valid": {
                    "view": "odin.password.hash",
                    "configuration": {
                        "hash": [
                            "body",
                            "password"
                        ],
                        "verify": [
                            "body",
                            "password2"
                        ],
                        "then": {
                            "view": "fostgres.sql",
                            "configuration": {
                                "sql": [
                                    {
                                        "path": [],
                                        "return": "object",
                                        "POST": [
                                            {
                                                "table": "odin.identity",
                                                "columns": {
                                                    "id": {
                                                        "source": [
                                                            "body",
                                                            "username"
                                                        ],
                                                    }
                                                }
                                            },
                                            {
                                                "table": "odin.credentials_password_ledger",
                                                "columns": {
                                                    "id": {
                                                        "source": [
                                                            "body",
                                                            "username"
                                                        ]
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        }
    }
}
