{
    "webserver": {
        "views/odin": {
            "view": "fost.view.pathprefix",
            "configuration": {
                "": "odin/static",
                "api/": "odin/api",
                "api/login/": "odin/login"
            }
        },
        "views/odin/static": {
            "view": "fost.static",
            "configuration": {
                "root": "Static/odin"
            }
        },
        "views/odin/login": {
            "view": "odin.login",
            "configuration": {
                "host": ["request", "headers", "__pgdsn", "host"],
                "user": ["request", "headers", "__pgdsn", "user"],
                "dbname": ["request", "headers", "__pgdsn", "dbname"],
                "expires": {"hours": 72},
                "failure": {
                    "view": "fost.response.401",
                    "configuration": {
                        "schemes": {
                            "Bearer": {}
                        }
                    }
                }
            }
        },
        "views/odin/api": {
            "view": "odin.secure",
            "configuration": {
                "secure": {
                    "view": "fost.view.pathprefix",
                    "configuration": {
                        "": "odin/secure/sql"
                    }
                },
                "unsecure": {
                    "view": "fost.response.401",
                    "configuration": {
                        "schemes": {
                            "Bearer": {}
                        },
                        "view": "fost.view.pathprefix",
                        "configuration": {
                            "": "odin/unsecure/sql",
                            "me/": "fost.response.403",
                            "user/": {
                                "view": "odin.user.unsecure",
                                "configuration": "odin/unsecure/sql"
                            }
                        }
                    }
                }
            }
        },
        "views/odin/secure/sql": {
            "view": "fostgres.sql",
            "configuration": {
                "host": ["request", "headers", "__pgdsn", "host"],
                "user": ["request", "headers", "__pgdsn", "user"],
                "dbname": ["request", "headers", "__pgdsn", "dbname"],
                "sql": [
                    {
                        "return": "object",
                        "path": [],
                        "GET": {
                            "command": "SELECT
                                    'odin/handshake'::text AS \"@context\",
                                    array_to_json(ARRAY(SELECT * FROM odin.module)) AS odin__modules,
                                    './login/'::text AS odin__login,
                                    './me/permissions'::text AS odin__my__permissions,
                                    './user/:user-id/'::text AS odin__user,
                                    identity.tableoid AS user__tableoid,
                                    identity.*
                                FROM odin.identity WHERE identity.id = $1",
                            "arguments": [
                                ["request", "headers", "__user"]
                            ]
                        }
                    },
                    {
                        "path": ["/me", "/permissions"],
                        "GET": {
                            "command": "SELECT DISTINCT
                                    odin.permission.slug AS permission,
                                    odin.permission.description
                                FROM odin.identity
                                JOIN odin.group_membership ON
                                    odin.identity.id=odin.group_membership.identity_id
                                JOIN odin.group_grant ON
                                    (odin.group_grant.group_slug=odin.group_membership.group_slug
                                    OR odin.identity.is_superuser='t')
                                JOIN odin.permission ON
                                    (odin.permission.slug=odin.group_grant.permission_slug
                                    OR odin.identity.is_superuser='t')
                                WHERE odin.identity.id=$1
                                ORDER BY permission",
                            "arguments": [
                                ["request", "headers", "__user"]
                            ]
                        }
                    },
                    {
                        "return": "object",
                        "path": ["/user", 1],
                        "GET": "SELECT
                                    identity.tableoid AS user__tableoid,
                                    identity.*
                                FROM odin.identity WHERE identity.id = $1",
                        "PUT": {
                            "table": "odin.identity_ledger",
                            "columns": {
                                "reference": {
                                    "key": true,
                                    "source": ["request", "headers", "__odin_reference"]
                                },
                                "identity_id": {
                                    "key": true,
                                    "source": 1
                                }
                            }
                        }
                    }
                ]
            }
        },
        "views/odin/unsecure/sql": {
            "view": "fostgres.sql",
            "configuration": {
                "host": ["request", "headers", "__pgdsn", "host"],
                "user": ["request", "headers", "__pgdsn", "user"],
                "dbname": ["request", "headers", "__pgdsn", "dbname"],
                "sql": [
                    {
                        "return": "object",
                        "path": [],
                        "GET": "SELECT
                            'odin/handshake'::text AS \"@context\",
                            array_to_json(ARRAY(SELECT * FROM odin.module)) AS odin__modules,
                            './login/'::text AS odin__login,
                            './me/permissions'::text AS odin__my__permissions,
                            './user/:user-id/'::text AS odin__user"
                    },
                    {
                        "return": "object",
                        "path": ["/user", 1],
                        "PUT": {
                            "table": "odin.identity_ledger",
                            "columns": {
                                "reference": {
                                    "key": true,
                                    "source": ["request", "headers", "__odin_reference"]
                                },
                                "identity_id": {
                                    "source": 1
                                }
                            }
                        }
                    }
                ]
            }
        }
    }
}

