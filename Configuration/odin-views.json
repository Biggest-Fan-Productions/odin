{
    "webserver": {
        "views/odin": {
            "view": "fost.view.pathprefix",
            "configuration": {
                "": "odin/static",
                "api/": "odin/api",
                "api/login/": "odin/login",
                "api/register/": "odin/register"
            }
        },
        "views/odin/static": {
            "view": "fost.static",
            "configuration": {
                "root": "Static/odin"
            }
        },
        "views/odin/login": {
            "view": "odin.login",
            "configuration": {
                "expires": {"hours": 72},
                "failure": {
                    "view": "fost.response.401",
                    "configuration": {
                        "schemes": {
                            "Bearer": {}
                        }
                    }
                }
            }
        },
        "views/odin/register": {
            "view": "odin.register",
            "configuration": {
            }
        },
        "views/odin/logout": {
            "view": "odin.logout",
            "configuration": "fost.response.200"
        },
        "views/odin/api": {
            "view": "odin.secure",
            "configuration": {
                "secure": {
                    "view": "fost.view.pathprefix",
                    "configuration": {
                        "": "odin/secure/sql",
                        "logout/": "odin/logout",
                        "me/password": "odin.password.me"
                    }
                },
                "unsecure": {
                    "view": "fost.response.401",
                    "configuration": {
                        "schemes": {
                            "Bearer": {}
                        },
                        "view": "fost.view.pathprefix",
                        "configuration": {
                            "": "odin/unsecure/sql",
                            "me/": "fost.response.403",
                            "me/password": "odin.password.me",
                            "user/": {
                                "view": "odin.user.unsecure",
                                "configuration": "odin/unsecure/sql"
                            }
                        }
                    }
                }
            }
        },
        "views/odin/secure/sql": {
            "view": "fostgres.sql",
            "configuration": {
                "sql": [
                    {
                        "return": "object",
                        "path": [],
                        "GET": {
                            "command": "SELECT
                                    'odin/handshake'::text AS \"@context\",
                                    array_to_json(ARRAY(SELECT * FROM odin.module)) AS odin__modules,
                                    current_setting('odin.jwt.sub') AS jwt__subject,
                                    './login/'::text AS odin__login,
                                    './logout/'::text AS odin__logout,
                                    './me/permissions'::text AS odin__my__permissions,
                                    './me/password'::text AS odin__my__password,
                                    './user/:user-id/'::text AS odin__user,
                                    identity.tableoid AS user__tableoid,
                                    identity.*
                                FROM odin.identity WHERE identity.id = $1",
                            "arguments": [
                                ["request", "headers", "__user"]
                            ]
                        }
                    },
                    {
                        "path": ["/me", "/permissions"],
                        "GET": {
                            "command": "SELECT
                                    permission_slug AS permission, description
                                FROM odin.user_permission
                                WHERE identity_id=$1
                                ORDER BY permission",
                            "arguments": [
                                ["request", "headers", "__user"]
                            ]
                        }
                    },
                    {
                        "return": "object",
                        "path": ["/user", 1],
                        "GET": "SELECT
                                    identity.tableoid AS user__tableoid,
                                    identity.*
                                FROM odin.identity WHERE identity.id = $1",
                        "PUT": {
                            "table": "odin.identity_ledger",
                            "columns": {
                                "reference": {
                                    "key": true,
                                    "source": ["request", "headers", "__odin_reference"]
                                },
                                "identity_id": {
                                    "key": true,
                                    "source": 1
                                }
                            }
                        }
                    }
                ]
            }
        },
        "views/odin/unsecure/sql": {
            "view": "fostgres.sql",
            "configuration": {
                "sql": [
                    {
                        "return": "object",
                        "path": [],
                        "GET": "SELECT
                            'odin/handshake'::text AS \"@context\",
                            array_to_json(ARRAY(SELECT * FROM odin.module)) AS odin__modules,
                            './login/'::text AS odin__login,
                            './logout/'::text AS odin__logout,
                            './me/permissions'::text AS odin__my__permissions,
                            './me/password'::text AS odin__my__password,
                            './user/:user-id/'::text AS odin__user"
                    },
                    {
                        "return": "object",
                        "path": ["/user", 1],
                        "PUT": {
                            "table": "odin.identity_ledger",
                            "columns": {
                                "reference": {
                                    "key": true,
                                    "source": ["request", "headers", "__odin_reference"]
                                },
                                "identity_id": {
                                    "source": 1
                                }
                            }
                        }
                    }
                ]
            }
        }
    }
}
