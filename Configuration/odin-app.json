{
    "webserver": {
        "views/odin/app": {
            "view": "fost.view.pathprefix",
            "configuration": {
                "": {
                    "view": "fost.static",
                    "configuration": {
                        "root": "usr/share/odin/Static/app/"
                    }
                },
                "login/": {
                    "view": "odin.app.login",
                    "configuration": {
                        "expires": {"hours": 72},
                        "static": "usr/share/odin/Static/app/login.html"
                    }
                }
            }
        },
        "views/odin/app/secure": {
            "view": "odin.app.secure",
            "configuration": {
                "secure": {
                    "view": "fost.response.200"
                },
                "unsecure": {
                    "view": "fost.response.401",
                    "configuration": {
                        "schemes": {
                            "Bearer": {}
                        }
                    }
                }
            }
        }
    }
}
